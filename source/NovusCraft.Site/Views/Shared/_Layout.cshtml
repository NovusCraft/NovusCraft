<body>
<div id="container" class="container_16">
	<header id="header">
		<h1 class="grid_4">
			<a href="/" title="NovusCraft homepage">
				Novus Craft
			</a>
		</h1>
		<nav class="grid_4 prefix_8">
			<ul>
				<li>@Html.MenuLink("Home", "Home", "Home", "Novus Craft homepage")</li>
				<li>@Html.MenuLink("About", "Home", "About", "About Novus Craft")</li>
				<li>@Html.MenuLink("Contact", "Home", "Contact", "Contact Novus Craft")</li>
			</ul>
		</nav>
	</header>
	<div class="clear"></div>
	@RenderBody()
	<aside class="grid_4 prefix_1">
		@if (IsSectionDefined("aside")) {
			@RenderSection("aside")
		} else {
			<a id="subscribe" href="http://feeds.feedburner.com/novuscraft" title="Subcribe to latest articles published on novuscraft.com">Subcribe to the RSS feed</a>
			Html.RenderPartial("Bio");
		}
	</aside>
	<div class="clear"></div>
	<footer id="footer">
		<span class="grid_4">Copyright &copy; 2011 Novus Craft</span>
		<span class="grid_4 prefix_8 source">Source code is available on <a href="https://github.com/NovusCraft/NovusCraft" title="novuscraft.com public Git repository">GitHub</a></span>
	</footer>
</div>

